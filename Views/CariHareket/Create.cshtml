@model Cari.Models.CariHareket

@{
    ViewData["Title"] = "Yeni Kayıt";
}

<div class="row">
    <div class="col-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var firma in ViewBag.Customers)
                    {
                        <option value="@firma.Id">@firma.Unvan</option>
                    }
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IslemTuru" class="control-label"></label>
                <select asp-for="IslemTuru" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var islemTuru in Model.IslemTuruArray)
                    {
                        <option value="@islemTuru.Key">@islemTuru.Value</option>
                    }
                </select>
                <span asp-validation-for="IslemTuru" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Tutar" class="control-label"></label>
                <input asp-for="Tutar" class="form-control" type="number" step="any" />
                <span asp-validation-for="Tutar" class="text-danger"></span>
            </div>
            <input type="submit" value="Kaydet" class="btn btn-primary btn-sm" />
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary btn-sm" role="button" asp-action="Index">Geri</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
