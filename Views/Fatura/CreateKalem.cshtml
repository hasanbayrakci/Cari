@model Cari.Models.FaturaDetay

@{
    ViewData["Title"] = "Yeni Kayıt";
}
<div class="row">
    <div class="col-4">
        <form asp-action="CreateKalem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="FaturaKalemleriId" class="control-label"></label>
                <select asp-for="FaturaKalemleriId" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var faturaKalemleri in ViewBag.FaturaKalemleri)
                    {
                        <option value="@faturaKalemleri.Id">@faturaKalemleri.Tanim</option>
                    }
                </select>
                <span asp-validation-for="FaturaKalemleriId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Ozelligi" class="control-label"></label>
                <input asp-for="Ozelligi" class="form-control" />
                <span asp-validation-for="Ozelligi" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BirimlerId" class="control-label"></label>
                <select asp-for="BirimlerId" class="form-control">
                    <option value="">Seçiniz</option>
                    @foreach (var birimler in ViewBag.Birimler)
                    {
                        <option value="@birimler.Id">@birimler.Tanim</option>
                    }
                </select>
                <span asp-validation-for="BirimlerId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Kdv" class="control-label"></label>
                <input asp-for="Kdv" class="form-control" />
                <span asp-validation-for="Kdv" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Miktar" class="control-label"></label>
                <input asp-for="Miktar" class="form-control" />
                <span asp-validation-for="Miktar" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BirimFiyat" class="control-label"></label>
                <input asp-for="BirimFiyat" class="form-control" />
                <span asp-validation-for="BirimFiyat" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Tutar" class="control-label"></label>
                <input asp-for="Tutar" class="form-control" />
                <span asp-validation-for="Tutar" class="text-danger"></span>
            </div>
            <input type="submit" value="Kaydet" class="btn btn-primary btn-sm" />
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary btn-sm" role="button" asp-action="Details" asp-route-id="@ViewBag.Id">Geri</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
